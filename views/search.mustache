<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Search</title>
		<style>
		</style>
	</head>
	<body>
		<header>
			<h1>Find a document</h1>
		</header>
		<main>
		{{#error}}
		<section class='error'>
			{{.}}
		</section>
		{{/error}}
		<section>
			<form method='POST' action='search'>
				<p><label>Part Number</label><input type='text' name='part_no' required='required'></p>
				<p><label>Document Type</label><input type='text' name='doc_type'></p>
				<input type='submit' value='Search'>
			</form>
		</section>
		{{#results}}
		<section class='results'>
			{{.}}
		</section>
		{{/results}}
		</main>
	</body>
