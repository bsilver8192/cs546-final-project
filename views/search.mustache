<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Search</title>
		<link rel="stylesheet" type="text/css" href="/static/common.css">
		<link rel="stylesheet" type="text/css" href="/static/search.css">
		<script src=/static/favorites.js></script>
	</head>
	<body>
		{{> navigation }}
		<header>
			<h1>Find a document</h1>
		</header>
		<main>
		{{#error}}
		<section class='error'>
			{{.}}
		</section>
		{{/error}}
		<section class='search'>
			<form method='POST' action='search'>
				<label>Part Number <input type='text' name='part_no'></label>
				<label>Document Type <input type='text' name='doc_type'></label>
				<input type='submit' value='Search'>
			</form>
		</section>
		
		<section class='results'>
		{{#results}}
		<div class=result>
			<button onclick="handle_favorite('{{_id}}', this)" class='{{classes}}'></button>
			<a href='/document/view/{{_id}}'>{{manufacturer}} {{documentType}}</a>
		</div>
		{{/results}}
		{{^results}}
		No results. Please enter another search.
		{{/results}}
		</section>
		
		<script src=/static/tota11y.min.js></script>
		</main>
	</body>
</html>
